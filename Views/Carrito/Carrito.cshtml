@model List<(int IdProducto, string Nombre, decimal Precio, int Cantidad)>

@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    Layout = null;
    decimal subtotal = Model.Sum(p => p.Precio * p.Cantidad);
    var usuarioId = HttpContextAccessor.HttpContext?.Session.GetInt32("UsuarioId");
    var nombreUsuario = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNombre");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Carrito de Compras - Gossip Girl</title>
    <link rel="icon" type="image/png" href="/images/logoP.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
            padding-bottom: 40px;
        }
        .top-bar {
            background-color: #000;
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
        }
        .logo-title {
            display: flex;
            align-items: center;
            gap: 10px;
            flex: 1;
        }

        .logo-title img {
            height: 50px;
        }

        .search-box {
            border-radius: 20px;
            padding: 5px 15px;
            width: 200px;
        }


        .center-title {
            flex: 2;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }
        .center-title span {
             color: #ffcc00;
        }

        .top-icons i { font-size: 1.7rem; }

        .top-icons {
            display: flex;
            gap: 20px;
            align-items: center;
            justify-content: flex-end;
            flex: 1;
        }

        .nav-menu {
            background-color: #cc0066;
        }
        .nav-menu a {
            color: white;
            padding: 12px 20px;
            display: inline-block;
            text-decoration: none;
            font-weight: bold;
        }
        .cart-container {
            padding: 40px 60px;
        }
        .cart-header {
            font-weight: bold;
            border-bottom: 2px solid #ccc;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }
        .cart-item {
            background-color: white;
            padding: 15px;
            border: 1px solid #ccc;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .qty-controls {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .qty-controls form button {
            background-color: #cc0066;
            color: white;
            border: none;
            width: 32px;
            height: 32px;
            font-size: 18px;
            border-radius: 4px;
        }
        .btn-eliminar {
            background-color: #cc0066;
            color: white;
            border: none;
            padding: 6px 16px;
            border-radius: 4px;
            font-weight: bold;
        }
        .subtotal {
            font-weight: bold;
            text-align: right;
            margin-top: 30px;
            font-size: 18px;
        }
        .btn-pedido {
            display: block;
            background-color: #cc0066;
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 6px;
            font-weight: bold;
            margin: 30px auto 0;
        }
    </style>
</head>
<body>

<!-- ENCABEZADO + MEN칔 -->
<div class="top-bar">
    <div class="logo-title">
        <img src="/images/logo.png" alt="Logo Gossip Girl" />
    </div>
    <div class="center-title">WELCOME TO <span>GOSSIPGIRL</span></div>
    <div class="top-icons">
        <a href="/Home/Index"><i class="fa fa-home text-white"></i></a>
        <input type="text" class="search-box" placeholder="Buscador" />
        <i class="fa fa-search text-white"></i>
        <a href="/Carrito/VerCarrito"><i class="fa fa-shopping-cart text-white"></i></a>
        <i class="fa fa-user-circle text-white"></i>

        @if (usuarioId != null)
            {
                <div class="d-flex align-items-center gap-2">
                    <span class="text-white fw-bold">Hola, @nombreUsuario</span>
                    <a href="/Account/Logout" class="btn btn-sm btn-outline-light">Cerrar sesi칩n</a>
                </div>
            }
            else
            {
                <a href="/Account/LoginCliente" class="text-white text-decoration-none">
                    <i class="fa fa-user-circle text-white"></i>
                </a>
            }


    </div>
</div>

<div class="nav-menu text-center">
    <a href="/Home/Index">Inicio</a>
    <a href="/Home/Catalogo">Cat치logo</a>
    <a href="/Home/Pedidos">Pedidos</a>
    <a href="/Carrito/VerCarrito">Carrito de compras</a>
    <a href="/Account/Login">Iniciar sesi칩n / Registrarse</a>
</div>

<!-- CONTENIDO -->
<div class="cart-container container">
    @if (!Model.Any())
    {
        <div class="text-center">
            <h3>游 Tu carrito est치 vac칤o</h3>
            <p>Ve al <a href="/Home/Catalogo">cat치logo</a> para agregar productos.</p>
        </div>
    }
    else
    {
        <div class="cart-header row">
            <div class="col-md-6">Producto</div>
            <div class="col-md-2">Precio</div>
            <div class="col-md-2">Cantidad</div>
            <div class="col-md-2">Acciones</div>
        </div>

        @foreach (var item in Model)
        {
            <div class="cart-item row">
                <div class="col-md-6">@item.Nombre</div>
                <div class="col-md-2"><strong>$@item.Precio</strong></div>
                <div class="col-md-2">
                    <div class="qty-controls">
                        <form asp-action="ModificarCantidad" method="post">
                            <input type="hidden" name="itemId" value="@item.IdProducto" />
                            <input type="hidden" name="operacion" value="disminuir" />
                            <button type="submit">-</button>
                        </form>
                        <span>@item.Cantidad</span>
                        <form asp-action="ModificarCantidad" method="post">
                            <input type="hidden" name="itemId" value="@item.IdProducto" />
                            <input type="hidden" name="operacion" value="incrementar" />
                            <button type="submit">+</button>
                        </form>
                    </div>
                </div>
                <div class="col-md-2 text-end">
                    <form asp-action="Eliminar" method="post">
                        <input type="hidden" name="itemId" value="@item.IdProducto" />
                        <button type="submit" class="btn-eliminar">Eliminar</button>
                    </form>
                </div>
            </div>
        }

        <div class="subtotal">
            Subtotal: <span class="ms-2">$@subtotal</span>
        </div>

        <a href="/Home/Pedido" class="btn-pedido text-decoration-none text-center">Realizar pedido</a>
    }
</div>

</body>
</html>
