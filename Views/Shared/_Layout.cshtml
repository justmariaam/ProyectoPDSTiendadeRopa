@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    var usuarioId = HttpContextAccessor.HttpContext?.Session.GetInt32("UsuarioId");
    var nombreUsuario = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNombre");
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"] - Gossip Girl</title>
    <link rel="icon" type="image/png" href="/images/logoP.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body { font-family: Arial, sans-serif; background-color: #f7f7f7; }
        .top-bar { background-color: #000; color: white; padding: 10px 20px; display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; }
        .logo-title img { height: 50px; }
        .center-title { flex: 2; text-align: center; font-size: 24px; font-weight: bold; }
        .center-title span { color: #ffcc00; }
        .top-icons { display: flex; gap: 20px; align-items: center; justify-content: flex-end; flex: 1; }
        .top-icons i { font-size: 1.7rem; }
        .search-box { border-radius: 20px; padding: 5px 15px; width: 250px; }
        .nav-menu { background-color: #cc0066; }
        .nav-menu a { color: white; padding: 12px 20px; display: inline-block; text-decoration: none; }
    </style>
</head>
<body>
    <!-- ENCABEZADO -->
    <div class="top-bar">
        <div class="logo-title">
            <img src="/images/logo.png" alt="Logo Gossip Girl" />
        </div>

        <div class="center-title">
            WELCOME TO <span>GOSSIPGIRL</span>
        </div>

        <div class="top-icons">
            <i class="fa fa-home text-white"></i>
            <input type="text" class="search-box" placeholder="Buscador" />
            <i class="fa fa-search text-white"></i>
            <i class="fa fa-shopping-cart text-white"></i>

            @if (usuarioId != null)
            {
                <div class="d-flex align-items-center gap-2">
                    <span class="text-white fw-bold">Hola, @nombreUsuario</span>
                    <a href="/Account/Logout" class="btn btn-sm btn-outline-light">Cerrar sesión</a>
                </div>
            }
            else
            {
                <a href="/Account/LoginCliente" class="text-white text-decoration-none">
                    <i class="fa fa-user-circle text-white"></i>
                </a>
            }
        </div>
    </div>


    <!-- CONTENIDO DE LA PÁGINA -->
    <main role="main" class="container my-4">
        @RenderBody()
    </main>
</body>
</html>
