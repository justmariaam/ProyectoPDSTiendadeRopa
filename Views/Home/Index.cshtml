@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = null;

    var usuarioId = HttpContextAccessor.HttpContext?.Session.GetInt32("UsuarioId");
    var nombreUsuario = HttpContextAccessor.HttpContext?.Session.GetString("UsuarioNombre");
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>GOSSIP GIRL | Inicio</title>
    <link rel="icon" type="image/png" href="/images/logoP.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f7f7f7;
        }

        .top-bar {
            background-color: #000;
            color: white;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            justify-content: space-between;
            flex-wrap: wrap;
        }

        .logo-title {
            display: flex;
            align-items: center;
            gap: 10px;
            flex: 1;
        }

        .logo-title img {
            height: 50px;
        }

        .center-title {
            flex: 2;
            text-align: center;
            font-size: 24px;
            font-weight: bold;
        }

        .center-title span {
            color: #ffcc00;
        }

        .top-icons {
            display: flex;
            gap: 20px;
            align-items: center;
            justify-content: flex-end;
            flex: 1;
        }

        .top-icons i {
            font-size: 1.7rem;
        }

        .search-box {
            border-radius: 20px;
            padding: 5px 15px;
            width: 250px;
        }

        .nav-menu {
            background-color: #cc0066;
        }

        .nav-menu a {
            color: white;
            padding: 12px 20px;
            display: inline-block;
            text-decoration: none;
        }

        .banner {
            background-color: #ffe6f0;
            color: #cc0066;
            padding: 10px;
            text-align: center;
            font-weight: bold;
        }

        .product-section {
            padding: 30px;
            text-align: center;
        }

        .product-section img {
            width: 100%;
            height: auto;
            max-height: 250px;
            object-fit: cover;
            border-radius: 8px;
        }

        .product-title {
            margin-top: 10px;
            font-weight: bold;
        }

        .ordenar-btn {
            background-color: #cc0066;
            color: white;
            border: none;
            padding: 10px 20px;
            float: right;
            margin: 10px 20px;
            border-radius: 5px;
        }
    </style>
</head>
<body>

    <!-- Encabezado -->
    <div class="top-bar">
        <div class="logo-title">
            <img src="/images/logo.png" alt="Logo Gossip Girl" />
        </div>

        <div class="center-title">
            WELCOME TO <span>GOSSIPGIRL</span>
        </div>

        <div class="top-icons">
            <a href="/Home/Index"><i class="fa fa-home text-white"></i></a>
            <input type="text" class="search-box" placeholder="Buscador" />
            <i class="fa fa-search text-white"></i>
            <a href="/Carrito/VerCarrito"><i class="fa fa-shopping-cart text-white"></i></a>

            @if (usuarioId != null)
            {
                <div class="d-flex align-items-center gap-2">
                    <span class="text-white fw-bold">Hola, @nombreUsuario</span>
                    <a href="/Account/Logout" class="btn btn-sm btn-outline-light">Cerrar sesión</a>
                </div>
            }
            else
            {
                <a href="/Account/LoginCliente" class="text-white text-decoration-none">
                    <i class="fa fa-user-circle text-white"></i>
                </a>
            }
        </div>
    </div>

    <!-- Menú -->
    <div class="nav-menu text-center">
        <a href="/Home/Index">Inicio</a>
        <a href="/Home/Catalogo">Catálogo</a>
        <a href="/Home/Pedidos">Pedidos</a>
        <a href="/Carrito/VerCarrito">Carrito de compras</a>
        <a href="/Account/Login">Iniciar sesión / Registrarse</a>
    </div>

    <!-- Envío gratis -->
    <div class="banner">
        ENVÍO GRATIS — Para compras superiores a $1000 (en todo México)
    </div>

    <!-- Productos -->
    <div class="product-section container">
        <div class="d-flex justify-content-between align-items-center">
            <h3>Categorías</h3>
            <button class="ordenar-btn">Ordenar por</button>
        </div>
        <div class="row mt-4">
            <div class="col-md-3 col-sm-6 mb-4">
                <img src="/images/ninas.jpg" alt="Ropa para Niñas">
                <div class="product-title"><a href="/Home/Catalogo?categoria=Niña">Ropa para Niñas</a></div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <img src="/images/bebes.jpg" alt="Ropa para Bebés">
                <div class="product-title"><a href="/Home/Catalogo?categoria=Bebés">Ropa para Bebés</a></div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <img src="/images/mujer.jpg" alt="Ropa para Mujer">
                <div class="product-title"><a href="/Home/Catalogo?categoria=Mujer">Ropa para Mujer</a></div>
            </div>
            <div class="col-md-3 col-sm-6 mb-4">
                <img src="/images/hombre.jpg" alt="Ropa para Hombre">
                <div class="product-title"><a href="/Home/Catalogo?categoria=Hombre">Ropa para Hombre</a></div>
            </div>
        </div>
    </div>

</body>
</html>
