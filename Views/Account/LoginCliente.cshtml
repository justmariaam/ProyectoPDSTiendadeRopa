@{
    Layout = null;
    var mensaje = ViewBag.Mensaje as string;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>GOSSIP GIRL | Iniciar Sesión Cliente</title>
    <link rel="icon" type="image/png" href="/images/logoP.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', sans-serif;
        }

        .container-login {
            display: flex;
            height: 100vh;
        }

        .left-img {
            flex: 1.2;
            background: url('/images/login-banner.png') no-repeat center center;
            background-size: cover;
        }

        .right-form {
            flex: 0.8;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
        }

        .form-box {
            width: 100%;
            max-width: 400px;
            margin-left: 40px;
        }

        .logo-img {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .logo-img img {
            height: 80px;
        }

        label {
            font-weight: 600;
            margin-bottom: 6px;
        }

        .input-wrapper {
            position: relative;
            margin-bottom: 20px;
        }

        .input-wrapper input {
            width: 100%;
            padding: 12px 45px 12px 15px;
            border-radius: 6px;
            border: 1px solid #ccc;
            font-size: 15px;
        }

        .input-wrapper i {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: white;
            background-color: #f5a623;
            padding: 9px;
            border-radius: 4px;
        }

        .forgot {
            text-align: right;
            margin-bottom: 25px;
            font-size: 0.9rem;
        }

        .forgot a {
            color: #004c99;
            text-decoration: none;
        }

        .btn-orange {
            background-color: #f5a623;
            color: white;
            font-weight: bold;
            width: 100%;
            padding: 12px;
            font-size: 16px;
            border: none;
            border-radius: 8px;
            box-shadow: 0px 3px 6px rgba(0,0,0,0.2);
        }

        .divider-container {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 30px 0 20px;
        }

        .divider-line {
            flex: 1;
            height: 1px;
            background-color: #ccc;
        }

        .divider-text {
            margin: 0 10px;
            font-size: 18px;
            color: #aaa;
            font-weight: bold;
        }

        .btn-register {
            background-color: white;
            color: #f5a623;
            border: 2px solid #f5a623;
            font-weight: bold;
            font-size: 16px;
            width: 100%;
            padding: 10px;
            border-radius: 8px;
        }

        @@media (max-width: 768px) {
            .container-login {
                flex-direction: column;
            }

            .left-img {
                height: 200px;
                flex: none;
            }

            .form-box {
                padding: 0 30px;
                margin-left: 0;
            }
        }
    </style>
</head>
<body>

<div class="container-login">
    <div class="left-img"></div>

    <div class="right-form">
        <div class="form-box">
            <div class="logo-img">
                <img src="/images/logo1.png" alt="Gossip Girl Logo" />
            </div>

            @if (!string.IsNullOrEmpty(mensaje))
            {
                <div class="alert alert-danger">@mensaje</div>
            }

            <form asp-action="LoginCliente" method="post">
                <div class="mb-3">
                    <label for="email">Correo electrónico</label>
                    <div class="input-wrapper">
                        <input type="email" name="correo" placeholder="alex@email.com" required />
                        <i class="fa fa-envelope"></i>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="password">Contraseña</label>
                    <div class="input-wrapper">
                        <input type="password" name="contrasena" placeholder="Introduce tu contraseña" required />
                        <i class="fa fa-lock"></i>
                    </div>
                </div>

                <div class="forgot">
                    <a href="#">¿Olvidaste tu contraseña?</a>
                </div>

                <button type="submit" class="btn-orange">Iniciar Sesión</button>

                <div class="divider-container">
                    <div class="divider-line"></div>
                    <div class="divider-text">O</div>
                    <div class="divider-line"></div>
                </div>

                <a href="/Account/RegistrarCliente" class="btn-register text-center d-block text-decoration-none">
                    Registrarse ahora
                </a>
            </form>
        </div>
    </div>
</div>

</body>
</html>
