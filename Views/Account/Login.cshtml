@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>GOSSIP GIRL | Iniciar Sesión</title>
    <link rel="icon" type="image/png" href="/images/logoP.png" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 0;
            padding: 0;
        }

        .container-login {
            display: flex;
            height: 100vh;
        }

        .left-img {
            flex: 1.2;
            background: url('/images/login-banner.png') no-repeat center center;
            background-size: cover;
        }

        .right-form {
            flex: 0.8;
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
        }

        .form-box {
            width: 100%;
            max-width: 400px;
            margin-left: 40px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .logo-img {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .logo-img img {
            height: 80px; /* igual que en cliente */
        }

        .subtitle {
            font-size: 18px;
            margin-bottom: 30px;
            color: #f5a623;
            font-weight: bold;
            text-align: center;
        }

        .btn-login {
            width: 100%;
            padding: 14px;
            margin-bottom: 20px;
            border-radius: 8px;
            font-size: 18px;
            font-weight: bold;
        }

        .btn-cliente {
            background-color: #f5a623;
            color: white;
            border: none;
            box-shadow: 0px 2px 6px rgba(0,0,0,0.2);
        }

        .btn-admin {
            background-color: white;
            color: #f5a623;
            border: 2px solid #f5a623;
        }

        .btn-login i {
            margin-right: 10px;
        }

        @@media (max-width: 768px) {
            .container-login {
                flex-direction: column;
            }

            .left-img {
                height: 200px;
                flex: none;
            }

            .form-box {
                padding: 0 30px;
                margin-left: 0;
            }

            .logo-img img {
                height: 60px;
            }
        }
    </style>
</head>
<body>

<div class="container-login">
    <div class="left-img"></div>

    <div class="right-form">
        <div class="form-box">
            <div class="logo-img">
                <img src="/images/logo1.png" alt="Gossip Girl Logo" />
            </div>

            <div class="subtitle">INICIAR SESIÓN COMO:</div>

            <a href="/Account/LoginCliente" class="btn btn-login btn-cliente">
                <i class="fa fa-user"></i> Cliente
            </a>

            <a href="/Account/LoginAdmin" class="btn btn-login btn-admin">
                <i class="fa fa-lock"></i> Administrador
            </a>
        </div>
    </div>
</div>

</body>
</html>
